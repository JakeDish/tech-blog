{{#each posts as |post|}}
<div class="box">

  <div class="columns is-mobile is-centered is-vcentered">
    <div class="column">
    </div>

    <div class="column is-flex-direction-row">
      <span class="title">{{User.username}}'s post</span><br>
      <span class="subtitle"><br>{{post.content}}<br></span><br>
      <p class="note">{{format_date createdAt}}</p>
    </div>
  </div>
</div>
{{/each}}

