<div class="box">

  <div class="columns is-mobile is-centered is-vcentered">


    <div class="column is-flex-direction-row">
      <span id="post-title" class="title" >{{post.title}}</span><br />
      <span id="post-text" class="content" ><br>{{post.content}}<br></span><br />
      <p class="note">{{post.user.user_name}}'s Post</p>
      <input id="post-id" type="hidden" value="{{post.id}}"></input>
        <form class="new-comment">
          <div>
            <textarea name="comments" id="comments" placeholder="Add a Comment!">
            </textarea>
          </div>
          

          <input id="save-button" type="submit" value="Submit" >
        </form>

            {{#each post.comments as |comment|}}
              <div class="border border-primary">
                <div>{{comment.comment_text}}</div>
                <div>{{comment.user.username}}</div>
              </div>
            {{/each}}

    </div>
  </div>
</div>

<script src="/js/edit.js"></script>
<script src="/js/comment.js"></script>