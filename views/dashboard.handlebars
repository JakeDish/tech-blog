<div class="container">
  <div class="container has-text-centered pb-3">
    <p class="title white-title">{{user_name}}'s Dashboard</p>
  </div>

  <form class="form new-post">
    <div class="field">
      <input id="post-title" class="input" type="text" placeholder="Title" />
    </div>
    <div class="field">
      <textarea id="post-text" class="textarea" placeholder="Post Content"></textarea>
    </div>
    <div class="field mt-4">
      <p class="control">
        <button class="button is-success">
          Submit
        </button>
      </p>
    </div>
  </form>

  <h1 class="is-size-4 mt-5 white-title">{{user_name}}'s Posts:</h1>

  {{#each posts as |post|}}
  <div class="box">

    <div class="columns is-mobile is-centered is-vcentered">


      <div class="column is-flex-direction-row">
        <span class="title">{{post.title}}</span>
        <br><span class="subtitle"><br>{{post.content}}<br></span><br>
        <button class="button is-link is-light mt-4"><a style="text-decoration: none;" href="/movie/{{post.id}}"><i
              class="fa-solid fa-pencil"></i>Edit</a></button><br />

        {{!delete button}}
        <button class="deleteBtn button is-danger is-light mt-4" data-id="
            {{post.id}}"><i class="fa-solid fa-trash-can"></i>Delete</button>

      </div>
    </div>
  </div>
  {{/each}}

</div>

<script src="./js/new.js"></script>
<script src="./js/delete.js"></script>